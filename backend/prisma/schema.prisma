generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Roles Enum
enum RoleName {
  ADMIN
  ATENDENTE
  PRODUÇÃO
  CAIXA
}

// User Status
enum UserStatus {
  ONLINE
  OFFLINE
  AUSENTE
}

// Account Status
enum AccountStatus {
  ATIVO
  SUSPENSO
  BLOQUEADO
}

// Conversation Status
enum ConversationStatus {
  AGUARDANDO
  EM_ATENDIMENTO
  ATENDIDO
}

// Message Direction
enum MessageDirection {
  IN
  OUT
}

// Document Type
enum DocumentType {
  CPF
  CNPJ
  RG
  OUTRO
}

// User Model
model User {
  userId        String        @id @default(uuid())
  username      String        @unique @db.VarChar(50)
  firstName     String        @db.VarChar(255)
  lastName      String?       @db.VarChar(255)
  email         String        @unique @db.VarChar(255)
  passwordHash  String        @db.VarChar(255)
  profileImage  String?       @db.VarChar(512)
  phone         String?       @db.VarChar(25)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  roleId        String
  role          Role          @relation(fields: [roleId], references: [roleId])
  statusUser    UserStatus    @default(OFFLINE)
  statusAccount AccountStatus @default(ATIVO)
  preferences   Json?         @default("{}")
  emailVerified Boolean       @default(false)
  deletedAt     DateTime?
  failsLogin    Int           @default(0)
  lastLogin     DateTime?
  lastDevice    String?
  currentDevice String?

  auditLogs      AuditLog[]
  sessionTimes   UserSessionTime[]
  createdConsumers Consumer[]

  @@map("users")
}

// Role Model
model Role {
  roleId          String   @id @default(uuid())
  roleName        RoleName @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  rolePermissions Json     @default("{}")

  users User[]

  @@map("roles")
}

// Audit Log Model
model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  event     String   @db.VarChar(100)
  entity    String?  @db.VarChar(100)
  entityId  String?
  ip        String?  @db.VarChar(45)
  userAgent String?  @db.VarChar(512)
  meta      Json?    @default("{}")
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([event])
  @@index([createdAt])
  @@map("audit_logs")
}

// User Session Time Model - Rastreia tempo online dos usuários
model UserSessionTime {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  sessionDate DateTime @db.Date // Data da sessão (sem hora)
  startTime   DateTime // Quando a sessão começou
  endTime     DateTime? // Quando a sessão terminou (null se ainda ativa)
  durationSeconds Int  @default(0) // Duração em segundos (calculada)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([sessionDate])
  @@index([userId, sessionDate])
  @@map("user_session_times")
}

// Conversation Model
model Conversation {
  id            String             @id @default(uuid())
  status        ConversationStatus @default(AGUARDANDO)
  lastMessageAt DateTime?
  title         String?
  contactName   String?
  channel       String             @default("local")
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  messages      Message[]

  @@index([status])
  @@index([lastMessageAt])
  @@index([status, lastMessageAt])
  @@index([channel])
  @@map("conversations")
}

// Message Model
model Message {
  id             String           @id @default(uuid())
  conversationId String
  conversation   Conversation     @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  direction      MessageDirection
  body           String           @db.Text
  readAt         DateTime?
  createdAt      DateTime         @default(now())

  @@index([conversationId])
  @@index([conversationId, createdAt])
  @@index([direction])
  @@map("messages")
}

// Consumer Model
model Consumer {
  consumerId    String      @id @default(uuid())
  firstName     String      @db.VarChar(255)
  lastName      String?     @db.VarChar(255)
  email         String?     @db.VarChar(255)
  profileImage  String?     @db.VarChar(512)
  address       String?     @db.VarChar(500)
  zipcode       String?     @db.VarChar(10)
  phone         String?     @db.VarChar(25)
  docNumber     String?     @db.VarChar(50)
  docType       DocumentType?
  consumerNotes String?     @db.Text
  createdById   String
  createdBy     User        @relation(fields: [createdById], references: [userId])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deletedAt     DateTime?

  @@index([createdById])
  @@index([email])
  @@index([phone])
  @@index([docNumber])
  @@index([deletedAt])
  @@map("consumers")
}
